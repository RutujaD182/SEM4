%macro print 2
	mov rax,1
	mov rdi,1
	mov rsi ,%1
	mov rdx,%2
%endmacro

section .data
array: dq 0xA,0xB,0xC
msg1 db "array is:"
cnt: db 03H
count: db 10H
colon: db ":"
newline: db 0xA

section .bss
result resq 1

section .text
global _start

_start:
	mov r8,array

label:	mov rax,r8
	call HtA
	print colon,1	
	mov rax,qword[r8]
	call HtA
	print newline,1
	add r8,16
	dec byte[cnt]
	jnz label
	
	mov rax,60
	mov rdi,60
	syscall

HtA:    mov rsi,result
	mov byte[count],10H

ll1:	rol rax,4
	mov bl,al
	and bl,0FH
	cmp bl,09H
	jbe ll2
	add bl,07H

ll2:    add bl,30H
	mov byte[rsi],bl
	inc rsi
	dec byte[count]
	jnz ll1
	print result,16
	ret
 	

